@page
@model ServiceHost.Areas.Administration.Pages.Comments.IndexModel
@{
    Layout = "Shared/_AdminLayout";
    ViewData["Title"] = "مدیریت کامنت ها";
}
<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در کامنت ها</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    <div class="row">
                        <div class="form-group col-md-3">
                            <label class="sr-only" asp-for="Search.Name"></label>
                            <input class="form-control" asp-for="Search.Name" placeholder="نام">
                        </div>
                        <div class="form-group col-md-3">
                            <label class="sr-only" asp-for="Search.Email"></label>
                            <input class="form-control" asp-for="Search.Email" placeholder="ایمیل">
                        </div>

                        @*<div class="form-group col-md-3">
                                <label class="sr-only" asp-for="Search.ProductId"></label>
                                <select class="form-control" asp-for="Search.ProductId" asp-items="Model.Products">
                                    <option value="0">گروه محصولی ...</option>
                                </select>
                            </div>*@
                        <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                        <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">مشاهده همه</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست کامنت ها (@Model.Comment.Count)</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>نام</th>
                                    <th>ایمیل</th>
                                    <th>پیام کاربر</th>
                                    <th>تاریخ تولید</th>
                                    <th>وضعیت</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Comment)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td>@item.Email</td>
                                        <td>@item.Message</td>
                                        <td>@item.CreationDate</td>
                                        <td class="text-center">
                                            @if (item.IsCanceled)
                                            {
                                                <span class="text-danger"> کنسل شده</span>
                                            }
                                            else if (!item.IsCanceled && !item.IsConfirmed)
                                            {
                                                <span class="text-warning">در انتظار</span>
                                            }
                                            else if (!item.IsCanceled && item.IsConfirmed)
                                            {
                                                <span class="text-success">تایید شده </span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.IsCanceled)
                                            {
                                                <a asp-page="./Index" asp-page-handler="Cancel" asp-route-id="@item.Id"
                                                   class="btn btn-danger waves-effect waves-light m-b-5">کنسل</a>
                                            }
                                            else if (!item.IsConfirmed)
                                            {
                                                <a asp-page="./Index" asp-page-handler="Confirm" asp-route-id="@item.Id"
                                                   class="btn btn-success waves-effect waves-light m-b-5">تایید</a>
                                            }
                                            else if (!item.IsCanceled && !item.IsConfirmed)
                                            {
                                                <a asp-page="./Index" asp-page-handler="Cancel" asp-route-id="@item.Id"
                                                   class="btn btn-danger waves-effect waves-light m-b-5">کنسل</a>
                                                <a asp-page="./Index" asp-page-handler="Confirm" asp-route-id="@item.Id"
                                                   class="btn btn-success waves-effect waves-light m-b-5">تایید</a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}