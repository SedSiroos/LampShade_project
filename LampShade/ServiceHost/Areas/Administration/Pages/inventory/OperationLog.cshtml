@model List<InventoryManagement.Application.Contract.Inventory.InventoryOperationViewModel>
@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">گردش موجودی انبار</h4>
</div>


<div class="modal-body">
    <div class="row">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <td>#</td>
                    <td>تعداد</td>
                    <td>تاریخ</td>
                    <td>شخص</td>
                    <td>عملیات</td>
                    <td>موجودی فعلی</td>
                    <td>توضیحات</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-white @(item.Operation ? "bg-success": "bg-danger")">
                        <td>@item.Id</td>
                        <td>@item.Count</td>
                        <td>@item.OperationDateTime</td>
                        <td>@item.Operator</td>
                        <td>
                            @if (item.Operation)
                            {
                                <span>افزایشی</span>
                            }
                            else
                            {
                                <span>کاهشی</span>
                            }
                        </td>
                        <td>@item.CurrentCount</td>
                        <td>@item.Description</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
</div>